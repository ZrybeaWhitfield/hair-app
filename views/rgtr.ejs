<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-signin-client_id" content="270776896457-cq44ssdgtmh1dtt8en7k5tv3d8b6n35u.apps.googleusercontent.com">
    <title>Login</title>
    <link rel="stylesheet" href="/css/stylesRgtr.css" />
  </head>

  <body>
    <div class="container">

      <div class="card">
        <div class="logSignCard" id="card">
          <div class="logCard">
            <h2>Login</h2>
            <form >
              <input type="email" class="input-box" name="email" placeholder="Your Email" required>
              <input type="password" class="input-box" name="password" placeholder="Your Password" required>
              <button type="submit" class="submit-btn"> Submit</button>
              <input type="checkbox"><span>Remember me</span>
            </form>
            <button type="button" class="btn" onclick="openSign()">I'm New Here</button>
            <a href="">Forgot Password</a>
          </div>

          <div class="signCard">
            <h2>SignUp</h2>  
            <form action="/login" method="POST">
              <input type="text" class="input-box" name="name" placeholder="Your Name" required>
              <input type="email" class="input-box" name="emailNew" placeholder="Your Email" required>
              <input type="password" class="input-box" name="passwordNew"placeholder="New Password" required>
              <input type="password" class="input-box" name="passwordComfirm" placeholder="Comfirm Password" required>
              <button type="submit" class="submit-btn">Submit</button>
            </form>
            <button type="button" class="btn" onclick="openLog()">I've an account</button>
            <a href="">Forgot Password</a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://apis.google.com/js/platform.js" async defer></script>

    <script>
      let card=document.getElementById("card");
      function openSign(){
        card.style.transform="rotateY(-180deg)";
      }
      function openLog(){
        card.style.transform="rotateY(0deg)";
      }

    </script>

  </body>
</html>
